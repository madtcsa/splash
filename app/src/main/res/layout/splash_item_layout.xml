<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.kkxx.mysplash.view.FreedomImageView
            android:id="@+id/splashPreviewImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:transitionName="viewDetail"
            app:fiv_shadow_position="bottom" />

        <TextView
            android:id="@+id/splashDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/splashPreviewImg"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/white"
            tools:text="#20170101" />

        <TextView
            android:id="@+id/splashAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/splashDate"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/white"
            tools:text="unsplash" />

        <ImageView
            android:id="@+id/splashCollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/splashPreviewImg"
            android:layout_alignEnd="@id/splashPreviewImg"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_camera" />
    </RelativeLayout>
</android.support.v7.widget.CardView>